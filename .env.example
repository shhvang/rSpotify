# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
OWNER_TELEGRAM_ID=your_telegram_user_id_here
# Bot username WITHOUT @ symbol (e.g., rSpotifyBot not @rSpotifyBot)
BOT_USERNAME=rSpotifyBot

# Web App Bots (Optional - run independently)
BETTERTHANVERY_BOT_TOKEN=your_betterthanvery_bot_token_here
BETTERTHANVERY_WEB_URL=https://betterthanvery.netlify.app
PERFECTCIRCLE_BOT_TOKEN=your_perfectcircle_bot_token_here
PERFECTCIRCLE_WEB_URL=https://perfectcircle.netlify.app

# Spotify API Configuration (Story 1.4 OAuth)
# Register your app at: https://developer.spotify.com/dashboard/applications
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
# MUST use HTTPS with your domain for OAuth callbacks
# NOTE: Include port number if not using standard 443 (e.g., :6970, :7001)
SPOTIFY_REDIRECT_URI=https://rspotify.shhvang.space:6970/spotify/callback

# OAuth Callback Service Configuration (Story 1.4 - aiohttp + certbot)
# Domain must have DNS A record pointing to your VPS IP
DOMAIN=rspotify.shhvang.space
# Email for Let's Encrypt certificate expiry notifications
CERTBOT_EMAIL=your_email@example.com
# OAuth service ports (production: 6969/6970, test: 7000/7001)
OAUTH_HTTP_PORT=6969
OAUTH_HTTPS_PORT=6970

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=rspotify_bot

# Encryption Configuration
# Generate a new key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_generated_encryption_key_here

# DuckDNS Configuration (Legacy - Optional)
DUCKDNS_TOKEN=your_duckdns_token_here
DUCKDNS_DOMAIN=yourdomain.duckdns.org

# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Process Management (prevents conflicts in multi-environment deployments)
# Leave blank for default /tmp/rspotify-bot.pid
RS_BOT_PID_FILE=

# Deployment Configuration
SERVER_HOST=your_vps_ip_here
SERVER_USER=your_vps_user_here
DEPLOY_KEY_PATH=~/.ssh/deploy_key

# Optional: Pastebin Configuration (for error reporting)
PASTEBIN_API_KEY=your_pastebin_api_key_here
PASTEBIN_USER_KEY=your_pastebin_user_key_here

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_BURST=5

# Cache Configuration
CACHE_TTL_SECONDS=1800